<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="180" minWidth="10.0" prefWidth="180" />
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="180" minWidth="10.0" prefWidth="180" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" text="\$first">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></Label>
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="studentId" styleClass="cell_small_label" text="\$studentId" />
         <Region prefHeight="15.0" />
      <Label fx:id="projectName" styleClass="cell_small_label" text="\$projectName">
            <font>
               <Font name="System Italic" size="13.0" />
            </font></Label>
         <Region prefHeight="5.0" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
        <Label fx:id="projectStatus" styleClass="cell_small_label" text="\$projectStatus" />
    </VBox>
      <VBox layoutX="10.0" layoutY="10.0" minHeight="105" prefHeight="124.0" prefWidth="184.0" GridPane.columnIndex="1">
         <padding>
            <Insets bottom="5" left="15" right="5" top="5" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="18.0" prefWidth="156.0" spacing="5">
               <children>
                  <Label fx:id="id1" styleClass="cell_big_label">
                     <minWidth>
                        <Region fx:constant="USE_PREF_SIZE" />
                     </minWidth>
                  </Label>
                  <Label fx:id="name1" alignment="TOP_LEFT" styleClass="cell_big_label" text="Deadlines">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
             <FlowPane fx:id="deadlineList" styleClass="content" />
         </children>
      </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
